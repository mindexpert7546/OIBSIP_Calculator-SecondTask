<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2EB"
    tools:context="com.kundan.calculatorkc.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="right"
        android:layout_above="@id/inputOutput"
        android:paddingRight="20dp"
        android:id="@+id/inputText"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:layout_above="@+id/buttons"
        android:gravity="right"
        android:paddingRight="20dp"
        android:id="@+id/inputOutput"/>
    <LinearLayout

        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#000">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_ac"
                android:layout_width="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_ac"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_div"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_div"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_module"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_module"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_extra"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_extra"
                android:layout_height="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_7"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_8"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_9"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_multiply"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_multiplication"
                android:layout_height="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_4"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_5"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_6"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_minus"
                android:layout_height="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_1"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_2"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_3"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_plus"
                android:layout_height="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:visibility="invisible"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_1"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_0"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_dot"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/btn_equal"
                android:layout_width="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_equal"
                android:layout_height="70dp"/>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>